            <property name="objectMapper">
            <ref bean="JacksonObjectMapper" />
            </property>
            </bean>
            </list>
            </property>
        -->
    </bean>
    <!-- spring 文件上传控件 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="524288000"/>
        <property name="maxInMemorySize" value="409600"/>
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="uploadTempDir" value="/temp"/>
    </bean>
    <!-- 附件上传异常处理
    <bean id="maxUploadExceeded"  class="com.mymost.wms.frame.exception.FileUploadExceptionResolver" />
    -->
    <!--
    <bean id="JacksonObjectMapper"  class="org.codehaus.jackson.map.ObjectMapper" />
    -->
    <!--  遇到MaxUploadSizeExceededException异常时，自动跳转到/WEB-INF/jsp/error_fileupload.jsp页面-->
    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="java.lang.Exception">error</prop>
                <prop key="org.springframework.web.multipart.MaxUploadSizeExceededException">
                    pages/error/error_fileupload
                </prop>
            </props>
        </property>
        <property name="defaultStatusCode" value="500"></property>
    </bean>

    <!-- 开启controller注解支持 自动搜索@Controller标注的类，包括其下面的子包 -->
    <context:component-scan base-package="com">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>
    </context:component-scan>

</beans>

