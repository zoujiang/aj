<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Cache-Control" content="no-cache" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
<meta name="MobileOptimized" content="320"/>
<title>商家分享</title>
<link rel="stylesheet" type="text/css" href="css/style.css"/> 
<script src="../scripts/jquery.js"></script>
<script>
	$(document).ready(function() { 
    		var queryStr = window.location.search;
    		if(queryStr != ""){
    			queryStr = queryStr.substring(1);
    			if(queryStr.indexOf("&from=") != -1){
    				queryStr = queryStr.substring(0, queryStr.indexOf("&from="));
    				if(queryStr.endsWith("=")){
    					queryStr = queryStr.substring(0, queryStr.length-1);
    				}
    			}
    			 $.ajax({
    	             type: "GET",
    	             url: "/aj/admin/shopShare/init?id="+queryStr,
    	             dataType: "json",
    	             async: false,
    	             success: function(data){
    	            	 if(data.success){
    	            		var info = data.info;
    	            		$("#shopLogo").attr("src",info.logo);
    	            		$("#shopName").text(info.shopName);
    	            		$("#shopTel").text(info.tel);
    	            		$("#shopAddress").text(info.address);
    	            		$("#shopDesc").text(info.description);
    	            	 }else{
    	            		 alert(data.msg);
    	            	 }
    	         	 }
    	    	});
    		}else{
    			showException("您所查看的亲脉分享地址错误!");
    		}
    	});
</script>
</head>
<body onselectstart="return true;" ondragstart="return false;">
<div class="top_ad"><img src="images/ad.png"></div>
<div class="info">
 <ul>
    <li class="flower"></li>
    <li class="sj_logo"><img id="shopLogo"></li>
    <li class="sj_tit"><span id="shopName"></span></li>
    <li class="line"></li>
    <li class="sj_txt">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span id="shopDesc"></span></li>
    <li class="line"></li>
    <li class="sj_phone"><span id="shopTel"></span><br /><span id="shopAddress"></span></li>
 </ul>   
</div> 
<div class="share">
    <div class="qinmai_logo"><img src="images/qinmai_logo.png"></div>
    <div class="qinmai_kouhao">亲脉APP与各大影楼一起，传承家的回忆</div>
    <a href="http://qm.dbfish.net/d" class="qinmai_xiazai">下载APP</a>
</div>
</body>
</html>
